# Package Management Aliases

## Arch-based Distros (Pacman)
alias updt='sudo pacman -Syu'
alias inst='yay -S'
alias remo='yay -R'
alias aremo='yay -Rs'
alias clean='yay -Scc'
alias upgd='yay -Syyu  --nodiffmenu --noeditmenu '
alias yay='yay --noeditmenu --nodiffmenu' 
alias updt='yay -Syy'
alias orph='sudo pacman -Rns $(pacman -Qtdq)'
#alias mirror-update='sudo reflector -l 5 -p http --save /etc/pacman.d/mirrorlist -c'
alias mirror-update='sudo pacman-mirrors -c Australia,Bangladesh,Hong_Kong,India,Indonesia,Japan,Philippines,Singapore,South_Korea,Taiwan,United_States'


alias cronedit='su -c "crontab -e"'
