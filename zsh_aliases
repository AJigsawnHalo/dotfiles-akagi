##### User Aliases Akagi ver. 1.4.3  #####

# This is a set of aliases adapted for server akagi, my home media
# server. These aliases are created to ease the management and maintenance
# of akagi server.

### general aliases
alias spdtst='speedtest-cli --server 7167 --share'
alias df='pydf'
alias sx='startx'
alias i3conf='nano ~/.config/i3/config'
alias la='ls -A' 
alias lss='ls -sh'

# cd aliases
alias cd.='cd ..'
alias cd~='cd ~'
alias cdx='cd /media/exhdd'
alias cdtmp='cd /tmp'
alias cdtrns='cd ~/transmission'
alias cdbkup='cd ~/recording-backup'
alias cddot='cd ~/.dotfiles'

### exhdd aliases
alias drives='sudo fdisk -l'
alias mnta='sudo mount /dev/sda2 /media/exhdd && sudo mount /dev/sda1 /media/exhdd1'
alias mntb='sudo mount /dev/sdb2 /media/exhdd && sudo mount /dev/sdb1 /media/exhdd1'
alias mntc='sudo mount /dev/sdc2 /media/exhdd && sudo mount /dev/sdc1 /media/exhdd1'
alias umnt='sudo umount /media/exhdd && sudo umount /media/exhdd1'

### Transmission Aliases
alias transm-start='sudo service transmission-daemon start'
alias transm-stop='sudo service transmission-daemon stop'
alias transm='transmission-remote'

### apt aliases
alias upgd='sudo apt update && sudo apt upgrade'
alias inst='sudo apt install'
alias addrepo='sudo apt-add-repository'
alias prge='sudo apt purge'
alias remo='sudo apt remove'
alias aremo='sudo apt autoremove'
alias distup='sudo apt update && sudo apt upgrade && sudo apt dist-upgrade'
alias acln='sudo apt autoclean'
alias updt='sudo apt update'
